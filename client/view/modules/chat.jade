template(name="chat")
	.chat
		.title
			img.lock.corner-icon.js-svg(src="/icon/{{#if isLocked}}locked{{else}}unlocked{{/if}}.svg") 
			form(name='chat-topic')
				input(name='chat-topic' value="{{topic}}" disabled="disabled")
			.options
				if isOwner
					if isOptionsInProgress
						p.js-options-stop {{Translate "Click here if you're done editing"}}
					else
						p.js-rename {{Translate "Rename circle topic"}}
						p.js-type {{Translate "Toggle circle public visibility"}}
						if isSecret
							p.js-invite {{Translate "Allow or deny people to your secret circle"}}
						p.js-close {{Translate "Close the circle (messages will be gone forever)"}}
				else
					if is4eyes
						p {{Translate "Kahek√µnel ei ole valikuid, mida muuta."}}
					else
						p {{Translate "Circle can be managed only by it's creator"}}
		.messages
			each messages
				.message
					p.name {{username}}
					p.msg {{msg}}
		.input
			form(name='chat-msg')
				textarea(name="chat-msg")