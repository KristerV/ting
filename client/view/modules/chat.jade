template(name="chat")
	.chat
		.title
			.corner-icons
				.wrapper
					if isLocked
						img.corner-icon.js-type(src="/icon/eye-closed.svg")
						p {{Translate "Circle is private"}}
					else
						img.corner-icon.js-type(src="/icon/eye.svg")
						p {{Translate "Circle is public"}}
				if isOwner
					if isSecret
						.wrapper
							img.corner-icon.js-invite(src="/icon/add-user.svg")
							if isInviting
								p {{Translate "Finished inviting"}}
							else
								p {{Translate "Invite people"}}
					.wrapper
						img.corner-icon.js-close(src="/icon/trash.svg")
						p {{Translate "Close circle"}}
			form(name='chat-topic')
				input.btn(name='chat-topic' value="{{topic}}")
		.messages
			each messages
				.message
					p.name {{username}}
					p.msg {{msg}}
		.input
			form(name='chat-msg')
				textarea(name="chat-msg")