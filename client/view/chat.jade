template(name="circle")
	.circle-wrapper
		+themes
		.circle
			.title
				with circle
					p Ringi teema: {{#if topicAuthor}}<span class="topic small-button">{{topic}}</span>{{else}}<span class="bold">{{topic}}</span>{{/if}}
					p Ring on {{#if changeType}}<span class="type small-button">{{typeEst}}</span>{{else}}{{typeEst}}{{/if}}
					if authorName
						p Autor on <span class="bold">{{authorName}}</span>
			.messages
				each messages
					p <span class="bold">{{username}}:</span> {{msg}}
			form(name="circleinput")
				input(name="msg")
				input(type="submit")
		+userlist